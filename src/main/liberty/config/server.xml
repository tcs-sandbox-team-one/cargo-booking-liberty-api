<server description="new server">

    <!-- Enable features -->
    <featureManager>
        <feature>webProfile-8.0</feature>
		<feature>localConnector-1.0</feature>
    </featureManager>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint host="*" httpPort="9081" httpsPort="9443" id="defaultHttpEndpoint"/>
                  
    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>



    <!-- Declare the jar files for MySQL access through JDBC. -->
    <dataSource id="cargo-booking-service" jndiName="jdbc/cargotracker">
        <jdbcDriver libraryRef="MySQLLib"/>
        <properties databaseName="bookingmsdb" password="password" portNumber="3306" serverName="mysql-dev" serverTimezone="EST" user="root"/>
    </dataSource>
    <library id="MySQLLib">
        <file name="${server.config.dir}/lib/mysql-connector-java-8.0.17.jar"/>
    </library>

  


    <applicationMonitor updateTrigger="mbean"/>

    <webApplication id="cargo-booking-service" location="cargo-booking-service-1.0.war" name="cargo-booking-service"/>
</server>